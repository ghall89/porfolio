<div class="uk-background-fixed uk-background-center-center uk-height-medium uk-width-1-1" style="background-image: url(./img/ri02.jpg);"></div>

<!-- Contact -->
<section class="uk-padding" id="contact">

	<h2 class="uk-align-center uk-heading-line uk-text-center"><span>Get In Touch</span></h2>

	<div class="uk-text-center">
			<p>Like what you see, or just want to say hello? Drop me a line!</p>
	</div>

	<form>
			<fieldset class="uk-fieldset uk-width-2-3@m uk-align-center uk-padding uk-background-muted">
					<div class="uk-child-width-1-2@m" uk-grid>
							<div>
									<label for="nameInput">Name</label>
									<input class="uk-input" id="nameInput" type="text" placeholder="John Smith">
							</div>

							<div>
									<label for="emailInput">Email</label>
									<input class="uk-input" id="emailInput" type="email" placeholder="john@company.com">
							</div>
					</div>


					<div class="uk-margin">
							<label for="messageInput">Message</label>
							<textarea class="uk-textarea" id="messageInput" rows="5"></textarea>
					</div>

					<button class="uk-button uk-button-primary uk-width-1-1" id="sendBtn"><i class="fas fa-paper-plane"></i> Send</button>

			</fieldset>
	</form>

</section>


<!-- Modals -->
{{#each data}}
<div id="{{github}}" uk-modal>
	<div class="uk-modal-dialog uk-modal-body uk-margin-auto-vertical">
		<button class="uk-modal-close-default" type="button" uk-close></button>
		<h2 class="uk-modal-title">{{title}}</h2>
		<p>{{description}}</p>
		<a href="{{url}}" target="_blank" class="uk-button uk-button-default">Visit Page</a>
		<a href="https://github.com/{{githubUser}}/{{github}}" target="_blank" class="uk-button uk-button-default">GitHub Repo</a>
	</div>
</div>
{{/each}}

